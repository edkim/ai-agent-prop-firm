# Database
# Location: PROJECT_ROOT/backtesting.db (43MB SQLite database)
# Contains: Market data, agent configurations, trading history, learning data
# Backup: Automated daily backups to ~/Backups/ai-backtest/
# Restore: Run `npm run restore` to recreate from scratch
# IMPORTANT: Use ABSOLUTE path to avoid confusion
DATABASE_PATH=/Users/YOUR_USERNAME/Code/ai-backtest/backtesting.db

# Server Configuration
PORT=3000
NODE_ENV=development

# Polygon.io API (Market Data)
POLYGON_API_KEY=your_polygon_api_key_here

# Anthropic Claude API (AI Analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# TradeStation API (Trading - Phase 1)
# Get credentials from: https://developer.tradestation.com/
TRADESTATION_API_KEY=your_tradestation_api_key_here
TRADESTATION_API_SECRET=your_tradestation_api_secret_here
TRADESTATION_ACCOUNT_ID=your_paper_account_id_here
TRADESTATION_REDIRECT_URI=http://localhost:3000/auth/callback

# TradeStation Environment
# Use 'sim' for paper trading (simulation), 'live' for real money
TRADESTATION_ENV=sim

# Autonomous Trading Configuration
AUTO_EXECUTION_ENABLED=false
TRADING_TIMEFRAME=5min

# Paper Trading System (Graduated Agents)
# Set to 'true' to enable automated paper trading for agents with status='paper_trading'
# When enabled:
#   - Creates virtual $100k accounts for graduated agents
#   - Executes strategies in real-time using Polygon live data
#   - Simulates realistic fills with slippage and commissions
#   - Auto stop-loss at -5%, take-profit at +10%
#   - Monitors positions and generates performance metrics
# Default: false (paper trading disabled)
PAPER_TRADING_ENABLED=false

# Watchlist - Comma-separated ticker symbols
# Examples:
#   Tech sector (10): AAPL,MSFT,NVDA,TSLA,GOOGL,AMZN,META,AMD,INTC,NFLX
#   Tech sector (65): AAPL,MSFT,NVDA,GOOGL,GOOG,META,TSLA,AVGO,ORCL,CRM,ADBE,ACN,AMD,INTC,IBM,INTU,NOW,QCOM,TXN,CSCO,AMAT,MU,LRCX,ADI,KLAC,SNPS,CDNS,MCHP,NXPI,FTNT,PANW,ADSK,WDAY,ANSS,CRWD,DDOG,ZS,NET,SNOW,CTSH,FIS,FISV,PAYX,MPWR,ON,SWKS,MDB,HUBS,ZM,TEAM,OKTA,VEEV,AMZN,EBAY,ETSY,SHOP,NFLX,DIS,WBD,PARA,GEN,BR,DXC,JKHY,WEX
#   Financial sector: JPM,BAC,GS,MS,C,WFC,BK,USB,PNC,TFC,SCHW
WATCHLIST_TICKERS=AAPL,MSFT,GOOGL
# Phase 3: Real-Time Simulation Feature Flag

# Set to 'true' to enable Phase 3 real-time simulation (eliminates lookahead bias)
# Set to 'false' to use legacy mode (has lookahead bias - default for now)
# After validation, this will default to 'true' and legacy mode will be deleted
USE_REALTIME_SIMULATION=false

