# Database
DATABASE_PATH=./backtesting.db

# Server Configuration
PORT=3000
NODE_ENV=development

# Polygon.io API (Market Data)
POLYGON_API_KEY=your_polygon_api_key_here

# Anthropic Claude API (AI Analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# TradeStation API (Trading - Phase 1)
# Get credentials from: https://developer.tradestation.com/
TRADESTATION_API_KEY=your_tradestation_api_key_here
TRADESTATION_API_SECRET=your_tradestation_api_secret_here
TRADESTATION_ACCOUNT_ID=your_paper_account_id_here
TRADESTATION_REDIRECT_URI=http://localhost:3000/auth/callback

# TradeStation Environment
# Use 'sim' for paper trading (simulation), 'live' for real money
TRADESTATION_ENV=sim
