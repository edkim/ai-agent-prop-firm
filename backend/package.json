{
  "name": "polygon-backtest-backend",
  "version": "1.0.0",
  "description": "Backend for Polygon backtesting platform",
  "main": "dist/api/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/api/server.ts",
    "build": "tsc && cp src/database/schema.sql dist/database/",
    "start": "node dist/api/server.js",
    "test": "jest",
    "backfill:intraday": "ts-node src/scripts/backfill-intraday.ts",
    "backup": "npx tsx helper-scripts/backup-database.ts",
    "restore": "npx tsx helper-scripts/restore-database.ts",
    "restore:from-backup": "npx tsx helper-scripts/restore-database.ts --from-backup",
    "realtime": "ts-node src/realtime/index.ts",
    "realtime:dev": "ts-node-dev --respawn --transpile-only src/realtime/index.ts"
  },
  "keywords": [
    "backtesting",
    "polygon",
    "trading"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@polygon.io/client-js": "^8.2.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.6.2",
    "better-sqlite3": "^11.8.1",
    "chart.js": "^4.5.1",
    "chartjs-adapter-date-fns": "^2.0.0",
    "chartjs-node-canvas": "^5.0.0",
    "chartjs-plugin-annotation": "^3.1.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "expr-eval": "^2.0.2",
    "express": "^4.18.2",
    "node-cron": "^4.2.1",
    "qs": "^6.14.0",
    "uuid": "^8.3.2",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
